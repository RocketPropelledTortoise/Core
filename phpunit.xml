<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
        >
    <testsuites>
        <testsuite name="Entities Test Suite">
            <directory suffix=".php">./tests/Entities</directory>
        </testsuite>
        <testsuite name="Taxonomy Test Suite">
            <directory suffix=".php">./tests/Taxonomy</directory>
        </testsuite>
        <testsuite name="Translation Test Suite">
            <directory suffix=".php">./tests/Translation</directory>
        </testsuite>
        <testsuite name="Utilities Test Suite">
            <directory suffix=".php">./tests/Utilities</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">src/</directory>
        </whitelist>
    </filter>

    <logging>
        <!--<log type="coverage-html" target="build/coverage"/>-->
    </logging>
</phpunit>
